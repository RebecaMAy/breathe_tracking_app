<resources>
    <!-- Estilos para el AcordeÃ³n del Manual de Usuario -->
    <style name="AccordionCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">2dp</item>
    </style>

    <style name="AccordionContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:animateLayoutChanges">true</item>
    </style>

    <style name="AccordionHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="AccordionIcon">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:tint">@color/colorPrimary</item>
    </style>

    <style name="AccordionTitle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#333</item>
    </style>

    <style name="AccordionArrow">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:src">@drawable/ic_keyboard_arrow_down</item>
        <item name="android:tint">#777</item>
    </style>

    <style name="AccordionContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">#FAFAFA</item>
        <item name="android:padding">16dp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="AccordionText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>

    <style name="AccordionSubtitle" parent="AccordionText">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

</resources>